<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_dark_bg">

        <android.support.design.widget.AppBarLayout
                android:id="@+id/applayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
            <include layout="@layout/toolbar"/>
        </android.support.design.widget.AppBarLayout>
        <WebView
                android:id="@+id/wvTermsAndCondition"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applayout"/>

        <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_32"
                android:layout_marginTop="@dimen/space_24"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />


    </android.support.constraint.ConstraintLayout>

</layout>