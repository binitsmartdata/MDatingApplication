<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout

            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/user_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.dating.mdate.utill.MyRegularTextView
                android:background="@drawable/lite_grey_background"
                android:text="Hello Howiuehaihdftrrghdfhfghfghfghgfhgfhfghghfghfghfghfg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/comment_time"
                android:padding="@dimen/space_15"
                android:textSize="@dimen/sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/user_comment"/>

        <com.dating.mdate.utill.MyRegularTextView
                android:visibility="gone"
                android:textColor="#757575"
                android:text="08:15PM"
                android:layout_width="wrap_content"
                android:padding="@dimen/space_5"
                android:layout_height="wrap_content"
                android:id="@+id/comment_time"
                android:textSize="@dimen/sp_13"
                app:layout_constraintStart_toEndOf="@+id/user_comment"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline1"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.70"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline4"
            android:id="@+id/user_reply_layout"
            android:visibility="gone"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/lite_blue_background"

    >

        <com.dating.mdate.utill.MyRegularTextView
                android:text="Hello teamjfkljsdkljfljldjsfjjsdfdsfdssdfdsfsdfjj helloooooo basjdbfbabfbab"
                android:layout_margin="@dimen/space_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/space_15"
                android:textSize="@dimen/sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/user_reply"/>

        <com.dating.mdate.utill.MyRegularTextView
                android:textColor="#757575"
                android:text="08:15PM"
                android:textSize="@dimen/sp_13"
                android:layout_width="wrap_content"
                android:padding="@dimen/space_10"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_5"
                android:id="@+id/reply_time"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/user_reply"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.01"/>

        <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline3"
                app:layout_constraintGuide_percent="0.85"
                android:orientation="vertical"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            app:layout_constraintGuide_percent="0.30"
                                          android:orientation="vertical"/>


</android.support.constraint.ConstraintLayout>