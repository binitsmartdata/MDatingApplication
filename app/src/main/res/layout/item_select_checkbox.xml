<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.dating.mdate.ui.dashboard.activity.ProfileViewModel"/>
    </data>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    >
        <ImageView
                android:id="@+id/imgClose"
                android:layout_width="@dimen/space_40" android:layout_height="@dimen/space_40"
                android:padding="@dimen/space_10"
                android:visibility="gone"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_close_filter"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        <com.dating.mdate.utill.MyRegularTextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="@dimen/space_10"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="text"
                android:textAlignment="gravity"/>

        <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_alignParentEnd="true"/>
        <View
                android:id="@+id/vie"
                android:layout_width="match_parent" android:layout_height="@dimen/space_1"
                android:visibility="gone"
                android:background="@color/dark_gray"
                android:layout_below="@+id/text"></View>
    </RelativeLayout>
</layout>